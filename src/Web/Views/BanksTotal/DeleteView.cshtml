@using Domain.Models.ViewModels;
@model IEnumerable<BanksTotalViewModel>

<form asp-controller="BanksTotal">
    <label for="id">Банк</label>
    <select name="id">
        @foreach (var item in Model.Select(item => item))
        {
            <option value="@item.Id">@item.BankModel.Name</option>
        }
    </select>
    <input asp-action="Delete" type="submit" name="delete" value="Сбросить" />
</form>